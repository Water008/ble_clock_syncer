#!/bin/sh

##############################################################################
#
#  Gradle start up script for POSIX generated by Gradle.
#
# Important for running:
#
#   (1) You need a POSIX-compliant shell to run this script. If your /bin/sh is
#       noncompliant, but you have some other compliant shell such as ksh or
#       bash, then to run this script, type that shell name before the whole
#       command line, like:
#
#           ksh Gradle
#           bash Gradle
#
#       Busybox and similar reduced shells will NOT work, because this script
#       requires all of these POSIX shell features:
#         * functions;
#         * expansions [${var%,*}, ${var%%*}, ${var#*}, ${var##*}, ${var:<pattern>...}, ${var:+<default>}...];
#         * command substitution;
#         * compound commands;
#         * test command.
#
#       For Windows environments a Gradle wrapper is provided as 'gradlew.bat'.
#
#       To use Gradle, ensure your path includes the bin directory of the JDK/JRE
#       you are using (e.g., $JAVA_HOME/bin) and add the bin directory of the
#       wrapper to your PATH.
#
##############################################################################

# Attempt to set APP_HOME
# Resolve links: $0 may be a link to someplace and more links could be in the path
# for consistency use only one canonical form that can be found everywhere
prog="$0"
link=`dirname "$prog"`
APP_HOME=`dirname "$link"`

while [ -h "$link" ]; do
    APP_HOME=`dirname "$link"`
    link=`readlink "$link"`
done

# This is normally unused
# shellcheck disable=SC2034
APP_BASE_NAME=${0##*/}
APP_HOME=$(cd "${APP_HOME}/.." && pwd)

# Add default JVM options here. You can also use JAVA_OPTS and GRADLE_OPTS to pass JVM options to this script.
DEFAULT_JVM_OPTS='"-Xmx64m" "-Xms64m"'

# Use the maximum available, or set MAX_FD != -1 to use that value.
MAX_FD="maximum"

warn () {
    echo "$*"
} >&2

die () {
    echo
    echo "$*"
    echo
    exit 1
} >&2

# OS specific support (must be 'true' or 'false').
cygwin=false
msys=false
darwin=false
nonstop=false
case "`uname`" in
  CYGWIN*)
    cygwin=true
    ;;
  Darwin*)
    darwin=true
    ;;
  MINGW*)
    msys=true
    ;;
  NONSTOP*)
    nonstop=true
    ;;
esac

CLASSPATH=$APP_HOME/gradle/wrapper/gradle-wrapper.jar

# Determine the Java command to use to start the JVM.
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
        # IBM's JDK on AIX uses strange locations for the executables
        JAVACMD=$JAVA_HOME/jre/sh/java
    else
        JAVACMD=$JAVA_HOME/bin/java
    fi
    if [ ! -x "$JAVACMD" ] ; then
        die "ERROR: JAVA_HOME is set to an invalid directory: $JAVA_HOME

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
    fi
else
    JAVACMD=java
    if ! command -v java >/dev/null 2>&1
    then
        die "ERROR: JAVA_HOME is not set and no 'java' command could be found in your PATH.

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
    fi
fi

# Increase the maximum file descriptors if we can.
if [ "$cygwin" = "false" -a "$darwin" = "false" -a "$nonstop" = "false" ] ; then
    MAX_FD_LIMIT=`ulimit -H -n`
    if [ $? -eq 0 ] ; then
        if [ "$MAX_FD_LIMIT" != "unlimited" ] ; then
            if [ "$MAX_FD" -lt "$MAX_FD_LIMIT" ] ; then
                MAX_FD=$MAX_FD_LIMIT
            fi
        fi
    fi
fi

# For Darwin, add options to specify how the application appears in the dock
if $darwin; then
    GRADLE_OPTS="$GRADLE_OPTS \"-Xdock:name=$APP_BASE_NAME\" \"-Xdock:icon=$APP_HOME/media/gradle.icns\" \"$GRADLE_OPTS"
fi

# For Cygwin, switch paths to Windows format before running java
if $cygwin ; then
    APP_HOME=`cygpath --path "$APP_HOME"`
    CLASSPATH=`cygpath --path "$CLASSPATH"`
    JAVACMD=`cygpath --unix "$JAVACMD"`

    # We build the pattern for arguments to be converted via cygpath
    ROOTDIRSRAW=`find -L / -maxdepth 1 \( -type l -o -type d \) | cut -d/ -f 2-`
    ROOTDIRS=`echo "$ROOTDIRSRAW" | sed 's/\ / /g' | sed 's/^\///'`
fi

# Escape application args
save () {
    for i do printf %s\\n "$i" | sed "s/'/'\\\\\\'/g" | sed "s/$/\\\\\\$/g"
}
done
APP_ARGS=$(save "$@")

# Collect all arguments for the java command, following the shell quoting and substitution rules
eval set -- $DEFAULT_JVM_OPTS $JAVA_OPTS $GRADLE_OPTS "\"-Dorg.gradle.appname=$APP_BASE_NAME\"" -classpath "\"$CLASSPATH\"" org.gradle.wrapper.GradleWrapperMain "$APP_ARGS"

# by using the maximum available, or set MAX_FD != -1 to use that value
MAX_FD_LIMIT=`ulimit -H -n`
if [ $? -eq 0 ] ; then
    if [ "$MAX_FD_LIMIT" != "unlimited" ] ; then
        if [ "$MAX_FD" -lt "$MAX_FD_LIMIT" ] ; then
            MAX_FD=$MAX_FD_LIMIT
        fi
    fi
fi

if [ "$MAX_FD" != "maximum" ] ; then
    warn "WARNING: Maximum file descriptor number ($MAX_FD) is less than the system maximum. Problems may occur."
fi

# Execute Gradle
exec "$JAVACMD" "$@"
